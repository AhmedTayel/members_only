<div class="panel">
  <%= link_to edit_member_registration_path do%>
    <p class="panel-heading">Profile</p>
  
  <div class="panel-block">
    <div class="media">
      <div class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png" alt="This is a placeholder image.">
        </p>
      </div>
      <div class="media-content">
        <div class="content">
            <strong><%= member.name %></strong> <br />
            <small><%= member.bio %></small>
        </div>
      </div>
    </div>
  </div>
  <%end%>
  <div class="panel-block">
    <div class="level is-mobile">
      <div class="level-item">
        <div>
          <p class="heading">Posts</p>
          <p class="title is-6"><%= current_member.posts.count %></p>
        </div>
      </div>
      <div class="level-item ml-5">
        <div>
          <p class="heading">Comments</p>
          <p class="title is-6">$ph$</p>
        </div>
      </div>
    </div>
  </div>
</div>







