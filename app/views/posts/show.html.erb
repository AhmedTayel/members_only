<p id="notice"><%= notice %></p>
<div class="columns">
  <div class="column is-9 is-offset-1"> 
    <div class="panel">
      <p class="panel-heading">
        <strong><%= @post.member.name %></strong>
      </p>
      <div class="panel-block">
        <p>
        <%= @post.post %>
        </p>
      </div>
      <div class="panel-block level">
        <%= link_to edit_post_path(@post), class:"level-item" do %> 
          <span class="icon">
            <i class="fas fa-edit"></i>
          </span>
        <%end%>
        <%= link_to post_path(@post),method: :delete,data: {confirm: "Are you sure you want to delete this post?"}, class:"level-item" do %> 
          <span class="icon">
            <i class="fas fa-trash-alt"></i>
          </span>
        <%end%>
      </div>
    </div>
  </div>
</div>




