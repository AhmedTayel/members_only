<div class="box">
  <div class="media">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <%= f.error_notification %>
    <div class="field">
      <div class="control">
        <%= f.input :email,
                    required: true,
                    wrapper: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'input' },
                    label_html: { class: 'label'} %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class:'input' },
                wrapper: false,
                label_html: { class: 'label'} %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.button :submit, "Sign in", class: 'button is-success ' %>
      </div>
    </div>
    <%= link_to "Forgot your password? Hope you didn't cause this isn't working yet.", new_password_path(resource_name) %>
  <% end %>
    </div>
</div>